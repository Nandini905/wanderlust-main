 

<div class="container py-4">
  <div class="row g-4">
    <div class="col-lg-7" data-aos="fade-right">
      <div class="ratio ratio-16x9 mb-3">
        <img src="<%= listing.coverImage || '/images/placeholder-room.jpg' %>" class="rounded-3 w-100 h-100 object-fit-cover shadow-sm" alt="<%= listing.title %>">
      </div>
      <h1 class="h3 mb-1"><%= listing.title %></h1>
      <p class="text-muted mb-3"><i class="bi bi-geo-alt me-1"></i><%= listing.location %></p>
      <p><%= listing.description %></p>

      <hr>
      <h2 class="h5 mb-3">Reviews</h2>
      <div class="vstack gap-3">
        <% (reviews || []).forEach(function(review){ %>
          <div class="border rounded-3 p-3 shadow-sm" data-aos="fade-up">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <div class="fw-semibold"><i class="bi bi-person-circle me-1"></i><%= review.author.username %></div>
              <div class="text-warning"><i class="bi bi-star-fill"></i> <%= review.rating %></div>
            </div>
            <p class="mb-0 text-muted"><%= review.comment %></p>
          </div>
        <% }) %>
        <% if ((!reviews || reviews.length === 0) && user) { %>
          <a href="/listings/<%= listing._id %>/reviews/new" class="btn btn-outline-primary align-self-start" data-aos="zoom-in"><i class="bi bi-chat-dots me-2"></i>Write a review</a>
        <% } %>
      </div>
    </div>

    <div class="col-lg-5" data-aos="fade-left">
      <div class="border rounded-3 p-3 sticky-top" style="top: 88px;">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div class="h4 m-0">$<%= listing.pricePerNight %> <small class="text-muted fs-6">night</small></div>
          <div class="text-warning"><i class="bi bi-star-fill"></i> <%= listing.rating || 4.8 %></div>
        </div>
        <form action="/bookings" method="post" class="vstack gap-2">
          <input type="hidden" name="listingId" value="<%= listing._id %>">
          <div class="row g-2">
            <div class="col-6">
              <label class="form-label">Check-in</label>
              <input type="date" name="checkIn" class="form-control" required>
            </div>
            <div class="col-6">
              <label class="form-label">Check-out</label>
              <input type="date" name="checkOut" class="form-control" required>
            </div>
          </div>
          <div>
            <label class="form-label">Guests</label>
            <input type="number" min="1" name="guests" class="form-control" value="1" required>
          </div>
          <button class="btn btn-primary w-100" type="submit" data-aos="zoom-in"><i class="bi bi-calendar-check me-2"></i>Reserve</button>
          <% if (user && user._id && String(user._id) === String(listing.owner._id)) { %>
            <div class="d-flex gap-2 mt-2">
              <a class="btn btn-outline-secondary w-50" href="/listings/<%= listing._id %>/edit"><i class="bi bi-pencil-square me-1"></i>Edit</a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="w-50">
                <button class="btn btn-outline-danger w-100" type="submit"><i class="bi bi-trash me-1"></i>Delete</button>
              </form>
            </div>
          <% } %>
        </form>
      </div>
    </div>
  </div>
</div>

 

