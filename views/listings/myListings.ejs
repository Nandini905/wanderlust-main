 

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 m-0">My listings</h1>
    <a href="/listings/new" class="btn btn-primary" data-aos="zoom-in"><i class="bi bi-plus-circle me-2"></i>Create listing</a>
  </div>

  <div class="row g-4">
    <% (listings || []).forEach(function(listing, idx){ %>
      <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
        <div class="card h-100 border-0 shadow-sm hover:shadow" data-aos="fade-up" data-aos-delay="<%= (idx%6)*50 %>">
          <div class="ratio ratio-4x3">
            <img src="<%= listing.coverImage || '/images/placeholder-room.jpg' %>" class="card-img-top rounded-top object-fit-cover" alt="<%= listing.title %>">
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1"><%= listing.title %></h5>
            <p class="card-text text-muted mb-2"><i class="bi bi-geo-alt me-1"></i><%= listing.location %></p>
            <div class="mt-auto d-flex gap-2">
              <a class="btn btn-outline-secondary btn-sm" href="/listings/<%= listing._id %>/edit"><i class="bi bi-pencil-square me-1"></i>Edit</a>
              <a class="btn btn-outline-primary btn-sm" href="/listings/<%= listing._id %>"><i class="bi bi-eye me-1"></i>View</a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-outline-danger btn-sm" type="submit"><i class="bi bi-trash me-1"></i>Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (!listings || listings.length === 0) { %>
    <div class="text-center text-muted py-5" data-aos="fade-up">
      <i class="bi bi-inboxes fs-1 d-block mb-2"></i>
      <p>You haven't created any listings yet.</p>
    </div>
  <% } %>
</div>

 

