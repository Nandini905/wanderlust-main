 

<div class="container py-4" style="max-width: 720px;">
  <h1 class="h4 mb-3" data-aos="fade-down">Write a review for <span class="text-primary"><%= listing.title %></span></h1>
  <form action="/listings/<%= listing._id %>/reviews" method="post" class="vstack gap-3" data-aos="fade-up">
    <div>
      <label class="form-label">Rating</label>
      <select name="rating" class="form-select" required>
        <option value="">Select rating</option>
        <% for (var i = 5; i >= 1; i--) { %>
          <option value="<%= i %>"><%= i %> - <%= ['','Poor','Fair','Good','Very good','Excellent'][i] %></option>
        <% } %>
      </select>
    </div>
    <div>
      <label class="form-label">Comment</label>
      <textarea name="comment" rows="5" class="form-control" required><%= (form && form.comment) || '' %></textarea>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-primary" type="submit" data-aos="zoom-in"><i class="bi bi-send me-2"></i>Submit</button>
      <a class="btn btn-outline-secondary" href="/listings/<%= listing._id %>"><i class="bi bi-arrow-left me-2"></i>Back</a>
    </div>
  </form>
</div>

 

