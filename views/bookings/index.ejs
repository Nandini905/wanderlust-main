 

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 m-0">My bookings</h1>
  </div>

  <div class="vstack gap-3">
    <% (bookings || []).forEach(function(booking, idx){ %>
      <div class="d-flex gap-3 align-items-center border rounded-3 p-3 shadow-sm" data-aos="fade-up" data-aos-delay="<%= (idx%6)*50 %>">
        <img src="<%= booking.listing.coverImage || '/images/placeholder-room.jpg' %>" alt="<%= booking.listing.title %>" class="rounded object-fit-cover" style="width: 120px; height: 90px;">
        <div class="flex-grow-1">
          <div class="fw-semibold"><%= booking.listing.title %></div>
          <div class="text-muted small mb-1"><i class="bi bi-geo-alt me-1"></i><%= booking.listing.location %></div>
          <div class="text-muted small"><i class="bi bi-calendar me-1"></i><%= booking.checkIn %> to <%= booking.checkOut %></div>
        </div>
        <div class="text-end">
          <div class="fw-semibold">$<%= booking.totalPrice %></div>
          <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary btn-sm mt-2" data-aos="zoom-in"><i class="bi bi-eye me-1"></i>Details</a>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (!bookings || bookings.length === 0) { %>
    <div class="text-center text-muted py-5" data-aos="fade-up">
      <i class="bi bi-inboxes fs-1 d-block mb-2"></i>
      <p>You have no bookings yet.</p>
    </div>
  <% } %>
</div>

 

